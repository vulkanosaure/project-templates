{
	
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
		"**/.DS_Store": true,
		//"src/**" : true
  },
  
  "workbench.editor.enablePreview": false,
  
	"window.zoomLevel": 0,
  "editor.snippetSuggestions": "top",
  //"editor.parameterHints": false,

"search.exclude": {
	"**/node_modules": true,
	"**/bower_components": true,
	"**/screenshots": true,
	"**/dist": true,
	"**/failures": true,
	
	//added for ionic2+
	"**/platforms":true,
	// "**/www":true,
	"**/.sourcemaps":true
},

	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		"**/screenshots/**" : true,
		"**/deploy/**" : true,
		"**/dist/**" : true,
		"**/failures/**" : true,
	},

  // Controls if opened editors should show in tabs or not.
  "workbench.editor.showTabs": false,
  

  "editor.minimap.enabled": false,
	"workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "window.menuBarVisibility": "toggle",
  "workbench.sideBar.location": "left",


  "editor.insertSpaces": false,
  "editor.detectIndentation": false,
	"editor.tabSize": 2,
	"editor.multiCursorModifier": "ctrlCmd",


  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "none",
	"editor.trimAutoWhitespace": false,
	
	
	
	"macros": {
    "insertLineAfter2": [
			"editor.action.insertLineAfter",
			"closeReferenceSearch"
		],
		"insertLineBefore2": [
			"editor.action.insertLineBefore",
			"closeReferenceSearch"
		],
		"scrollLineUp": [
			"scrollLineUp",
			"scrollLineUp",
			"scrollLineUp",
			"scrollLineUp"
		],
		"scrollLineDown": [
			"scrollLineDown",
			"scrollLineDown",
			"scrollLineDown",
			"scrollLineDown"
		],
		"moveUp" :[
			"cursorUp","cursorUp","cursorUp","cursorUp"
		],
		"moveDown" :[
		"cursorDown","cursorDown","cursorDown","cursorDown"
		],
		"moveUpSelect" :[
			"cursorUpSelect","cursorUpSelect","cursorUpSelect","cursorUpSelect"
		],
		"moveDownSelect" :[
			"cursorDownSelect","cursorDownSelect","cursorDownSelect","cursorDownSelect"
		],
		
		"formatLine" : [
			"expandLineSelection",
			"formatSelection"
		],
		
		"closeSearchLeft" : [
			"closeReferenceSearch", "cancelSelection", "editor.action.smartSelect.grow",
			"cursorLeft"
		],
		
		"closeSearchRight" : [
			"closeReferenceSearch", "cancelSelection", "editor.action.smartSelect.grow",
			"cursorRight"
		]
		
	},
	"css_peek.exclude": [
		"node_modules/",
		"bower_components/",
		"e2e/",
		"src/assets/",
		".vscode/",
		"deploy/",
		"dist/",
		"failures/",
		"screenshots/"
		
	],
	//"terminal.integrated.cwd": "C:/DEV/PROJECT_WAMP",
	"workbench.startupEditor": "newUntitledFile",
	"php.suggest.basic": false,
	// "php.executablePath": "C:/wamp64/bin/php/php7.1.9/php.exe",
	"files.associations": {
		"*.html.twig": "html"
	},
	"emmet.showExpandedAbbreviation": "never",
	
	"phpunit.execPath": "./vendor/bin/simple-phpunit",
	"phpunit.args": [
	  "--configuration", "./phpunit.xml.dist"
	],
	"phpunit.preferRunClassTestOverQuickPickWindow": true,
	"extensions.ignoreRecommendations": false,
	"explorer.openEditors.visible": 0, // Default false
	// "files.associations": {"*.php": "html"}  
	
	"angular2-swithcer.openSideBySide": true,
	"typescript.tsdk": "C:/Users/VINC/AppData/Roaming/npm/node_modules/typescript/lib",
	
	
	"launch" : {
		"configurations": [
			{
				"name": "chrome angular",
				"type": "chrome",
				"request": "launch",
				"url": "http://localhost:4200",
				"webRoot": "${workspaceFolder}",
				"sourceMaps": true
			},
			{
				"name": "Debug js (launch)",
				"type": "chrome",
				"request": "launch",
				"url" : "http://autospot.local",
				"address": "localhost",
				"port": 9333,
				"sourceMaps": false,
				"webRoot": "${workspaceRoot}"
			}
		]
	},
	
	
	"markdown.styles": [],
	
	"path-intellisense.mappings": {
		"assets" : "${workspaceRoot}/src/assets",
		"library" : "${workspaceRoot}/src/css/library"
	},
	"path-intellisense.autoSlashAfterDirectory": false,
	"scrolloff.alwaysCenter": false,
	"scrolloff.scrolloff": 5,
	
	"files.autoSave": "off",
	"explorer.confirmDragAndDrop": false
}